<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >


<mapper namespace="com.sc.dao.system.NutritionMapper" >

    <resultMap id="RM.Nutrition" type="com.sc.pojo.Nutrition">
        <result property="sn" column="sn"/>
        <result property="name" column="name"/>
        <result property="value" column="value"/>
        <result property="remark" column="remark"/>
        <result property="orgCode" column="org_code"/>
        <result property="p1" column="p1"/>
        <result property="p2" column="p2"/>
    </resultMap>

	<sql id="Nutrition.columns">
	    <![CDATA[
        sn ,name ,value ,remark ,org_code ,p1 ,p2 
	    ]]>
	</sql>
	
    <insert id="insert" >
    <![CDATA[
        INSERT INTO nutrition (
        	sn ,
        	name ,
        	value ,
        	remark ,
        	org_code ,
        	p1 ,
        	p2 
        ) VALUES (
			nextVal('nutrition') ,
			#{name} ,
			#{value} ,
			#{remark} ,
			#{orgCode} ,
			#{p1} ,
			#{p2} 
        )
    ]]>
    <!--
    mysql:		type="post" SELECT  select last_insert_id()
    sqlserver:	type="post" SELECT  @@identity  AS  ID
    oracle:		type="pre" 	SELECT  sequenceName.nextval AS ID FROM DUAL
    DB2:		type="pre"	values nextval for sequenceName
        <selectKey resultClass="java.lang.Long" type="post" keyProperty="sn" >
            select last_insert_id()
        </selectKey>
    -->
    </insert>

    <update id="update" >
    <![CDATA[
        UPDATE nutrition SET
	        name = #{name} ,
	        value = #{value} ,
	        remark = #{remark} ,
	        org_code = #{orgCode} ,
	        p1 = #{p1} ,
	        p2 = #{p2} 
        WHERE 
	        sn = #{sn} 
    ]]>
    </update>

    <delete id="delete">
    <![CDATA[
        DELETE FROM nutrition WHERE
        sn = #{sn} 
    ]]>
    </delete>
    
    <select id="getById" resultMap="RM.Nutrition">
	    SELECT <include refid="Nutrition.columns"/>
	    <![CDATA[
	        FROM nutrition 
	        WHERE 
		        sn = #{sn} 
	    ]]>
    </select>

	<sql id="Nutrition.findPage.where">
	    <trim prefix="WHERE" prefixOverrides="AND|OR" >
		       <if test="sn !=null">
		            AND sn = #{sn}
		       </if>
		       <if test="name !=null">
		            AND name = #{name}
		       </if>
		       <if test="value !=null">
		            AND value = #{value}
		       </if>
		       <if test="remark !=null">
		            AND remark = #{remark}
		       </if>
		       <if test="orgCode !=null">
		            AND org_code = #{orgCode}
		       </if>
		       <if test="p1 !=null">
		            AND p1 = #{p1}
		       </if>
		       <if test="p2 !=null">
		            AND p2 = #{p2}
		       </if>
	    </trim>	
	</sql>
	 
    <select id="findPageCount" resultType="java.lang.Integer">
        SELECT count(*) FROM nutrition <include refid="Nutrition.findPage.where"/>    
    </select>
    
    <select id="findPage" resultMap="RM.Nutrition">
    	SELECT <include refid="Nutrition.columns"/> FROM nutrition 
		<include refid="Nutrition.findPage.where"/>
		<if test="sortColumns != null" >
			order by #{sortColumns}
		</if>
    </select>
    
    <select id="query" resultMap="RM.Nutrition">
    	SELECT <include refid="Nutrition.columns"/> FROM nutrition 
		<include refid="Nutrition.findPage.where"/>
		<if test="sortColumns != null" >
			order by #{sortColumns}
		</if>
    </select>

	
</mapper>

