<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >


<mapper namespace="com.sc.dish.dao.MenuCookMapper" >

    <resultMap id="RM.MenuCook" type="com.sc.dish.pojo.MenuCook">
        <result property="sn" column="sn"/>
        <result property="dishSn" column="dish_sn"/>
        <result property="cookSn" column="cook_sn"/>
        <result property="remark" column="remark"/>
        <result property="p1" column="p1"/>
        <result property="p2" column="p2"/>
    </resultMap>

	<sql id="MenuCook.columns">
	    <![CDATA[
        sn ,dish_sn ,cook_sn ,remark ,p1 ,p2 
	    ]]>
	</sql>
	
    <insert id="insert" >
    <![CDATA[
        INSERT INTO menu_cook (
        	sn ,
        	dish_sn ,
        	cook_sn ,
        	remark ,
        	p1 ,
        	p2 
        ) VALUES (
			nextVal('menu_cook') ,
			#{dishSn} ,
			#{cookSn} ,
			#{remark} ,
			#{p1} ,
			#{p2} 
        )
    ]]>
    <!--
    mysql:		type="post" SELECT  select last_insert_id()
    sqlserver:	type="post" SELECT  @@identity  AS  ID
    oracle:		type="pre" 	SELECT  sequenceName.nextval AS ID FROM DUAL
    DB2:		type="pre"	values nextval for sequenceName
        <selectKey resultClass="java.lang.Long" type="post" keyProperty="sn" >
            select last_insert_id()
        </selectKey>
    -->
    </insert>

    <update id="update" >
    <![CDATA[
        UPDATE menu_cook SET
	        dish_sn = #{dishSn} ,
	        cook_sn = #{cookSn} ,
	        remark = #{remark} ,
	        p1 = #{p1} ,
	        p2 = #{p2} 
        WHERE 
	        sn = #{sn} 
    ]]>
    </update>

    <delete id="delete">
    <![CDATA[
        DELETE FROM menu_cook WHERE
        sn = #{sn} 
    ]]>
    </delete>
    
    <select id="getById" resultMap="RM.MenuCook">
	    SELECT <include refid="MenuCook.columns"/>
	    <![CDATA[
	        FROM menu_cook 
	        WHERE 
		        sn = #{sn} 
	    ]]>
    </select>

	<sql id="MenuCook.findPage.where">
	    <trim prefix="WHERE" prefixOverrides="AND|OR" >
		       <if test="sn !=null">
		            AND sn = #{sn}
		       </if>
		       <if test="dishSn !=null">
		            AND dish_sn = #{dishSn}
		       </if>
		       <if test="cookSn !=null">
		            AND cook_sn = #{cookSn}
		       </if>
		       <if test="remark !=null">
		            AND remark = #{remark}
		       </if>
		       <if test="p1 !=null">
		            AND p1 = #{p1}
		       </if>
		       <if test="p2 !=null">
		            AND p2 = #{p2}
		       </if>
	    </trim>	
	</sql>
	 
    <select id="findPageCount" resultType="java.lang.Integer">
        SELECT count(*) FROM menu_cook <include refid="MenuCook.findPage.where"/>    
    </select>
    
    <select id="findPage" resultMap="RM.MenuCook">
    	SELECT <include refid="MenuCook.columns"/> FROM menu_cook 
		<include refid="MenuCook.findPage.where"/>
		<if test="sortColumns != null" >
			order by #{sortColumns}
		</if>
    </select>
    
    <select id="query" resultMap="RM.MenuCook">
    	SELECT <include refid="MenuCook.columns"/> FROM menu_cook 
		<include refid="MenuCook.findPage.where"/>
		<if test="sortColumns != null" >
			order by #{sortColumns}
		</if>
    </select>

	
</mapper>

